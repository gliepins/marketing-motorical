[Unit]
Description=Motorical Communications Block API
After=network.target motorical-backend-api.service

[Service]
Type=simple
WorkingDirectory=/root/motoric_smtp/communications-block
Environment=NODE_ENV=production
EnvironmentFile=/etc/motorical/communications-block.env
ExecStart=/usr/bin/node src/server.js
Restart=on-failure
RestartSec=5
User=root
Group=root
NoNewPrivileges=true
ProtectSystem=full

[Install]
WantedBy=multi-user.target


