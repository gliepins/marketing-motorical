# Development Configuration (override with real values for local dev)
COMM_PORT=3011
COMM_DB_URL=postgresql://comm_user:[YOUR_LOCAL_DB_PASSWORD]@localhost:5432/communications_db

# Motorical Integration (development/testing)
MOTORICAL_API_BASE=https://api.motorical.com
MOTORICAL_API_KEY=[YOUR_MOTORICAL_API_KEY]
MOTORICAL_PUBLIC_API_TOKEN=[OPTIONAL_PUBLIC_TOKEN]

# Local Development Secrets
SERVICE_JWT_SECRET=[GENERATE_RANDOM_SECRET_FOR_LOCAL_DEV]
COMM_INTERNAL_TOKEN=[GENERATE_RANDOM_TOKEN_FOR_LOCAL_DEV]

# Email Configuration (development)
COMM_FROM_ADDRESS=dev@yourdomain.com
COMM_SMTP_USER=[YOUR_SMTP_USER]
COMM_SMTP_PASS=[YOUR_SMTP_PASSWORD]

# Public Configuration
COMM_PUBLIC_BASE=http://localhost:3011

